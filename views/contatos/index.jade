extend ../layout

block content
	header
		h2 Ntalk - Agenda de contatos
	
	section
		form(action="/contato" method="post")
			input(type="text" name="contato[nome]" placeholder="Nome")
			input(type="text" name="contato[email]" placeholder="Email")
			button(type="submit") Cadastrar

		table
			thead
				tr
					th Nome
					th Email
					th Acao
			tbody
				each contato, i in contatos
					tr
						td #{contato.nome}
						td #{contato.email}
						td <a href="/contato/#{i}"> Detalhes
